#define     LED_1_ON                      PIND |= (1 << 0)
#define     LED_1_OFF                     PIND &= ~(1 << 0)
#define     LED_2_ON                      PIND |= (1 << 1)
#define     LED_2_OFF                     PIND &= ~(1 << 1)
#define     LED_3_ON                      PIND |= (1 << 2)
#define     LED_3_OFF                     PIND &= ~(1 << 2)

